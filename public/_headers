  # Long-term caching for hashed assets
  Cache-Control: public, max-age=31536000, immutable

/*.js
  # Cache JavaScript with revalidation
  Cache-Control: public, max-age=31536000, immutable

/*.css
  # Cache CSS with revalidation
  Cache-Control: public, max-age=31536000, immutable

/*.jpg
  # Cache images
  Cache-Control: public, max-age=31536000, immutable

